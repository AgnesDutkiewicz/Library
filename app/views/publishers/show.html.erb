<h1> <%= @publisher.name %> </h1>

<p>
  Origin country:
  <%= @publisher.origin %>
</p>
<p>
  Publisher books:
</p>

<% @publisher.books.each do |book| %>
  <p>
    <%= link_to book.title, book_path(book) %>
  </p>
<% end %>

<%= link_to "Edit", edit_publisher_path if policy(Publisher).update? %>
<%= link_to "Delete Publisher", publisher_path(@publisher), method: :delete, data: { confirm: 'Are you sure?' } if policy(Publisher).destroy?%>
