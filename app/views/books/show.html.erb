<h1> <%= @book.title %> </h1>

<p>
  Author:
  <%= @book.author %>
</p>
<p>
  Publisher:
  <%= link_to @book.publisher.name, publisher_path(@book.publisher) %>
</p>
<p>
  Publication date:
  <%= @book.publication_date %>
</p>

<%= link_to "Edit", edit_book_path %>
<%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: 'Are you sure?'} %>
