<%= form_for(@book) do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title, autofocus: true %>
  </p>
  <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :publisher %><br/>
    <%= f.text_field :publisher %>
  </p>

  <p>
    <%= f.label :publication_date %><br/>
    <%= f.date_select :publication_date %>
  </p>

<%= f.submit %>
<% end %>
